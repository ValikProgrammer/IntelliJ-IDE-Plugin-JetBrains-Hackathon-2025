<idea-plugin>
    <id>com.github.ValikProgrammer.IntelliJ-IDE-Plugin-JetBrains-Hackathon-2025</id>
    <name>Code Evaluation - Quantum Spaghetti</name>
    <vendor>Quantum Spaghetti</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends optional="true" config-file="kotlin-k2.xml">org.jetbrains.kotlin</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.startup.MyProjectActivity"/>
    </extensions>

    <actions>
        <action id="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.CollectCodeAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.CollectCodeAction"
                text="Collect Code" description="Collects code from the window">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <action
                id="OpenAITest.TestAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.CollectCodeAction"
                text="Run OpenAI API Test"
                description="Sends a simple test request to the OpenAI API.">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>

        <action id="OpenAITest.ImproveReadabilityAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Readability" description="Improves code readability using AI"/>

        <action id="OpenAITest.ImproveEffectivenessAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Effectiveness" description="Improves code effectiveness using AI"/>

        <action id="OpenAITest.ImproveMaintainabilityAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Maintainability" description="Improves code maintainability using AI"/>

        <action id="OpenAITest.ImprovePerformanceAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Performance" description="Improves code performance using AI"/>

        <action id="OpenAITest.ImproveComplexityAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Complexity" description="Reduces code complexity using AI"/>

        <action id="OpenAITest.ImproveSecurityAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Security" description="Improves code security using AI"/>

        <action id="OpenAITest.ImproveConsistencyAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Consistency" description="Improves code consistency using AI"/>

        <action id="OpenAITest.ImproveReusabilityAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Reusability" description="Improves code reusability using AI"/>

        <action id="OpenAITest.ImproveTestabilityAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Improve Testability" description="Improves code testability using AI"/>

        <action id="OpenAITest.ImproveDuplicationAction"
                class="com.github.valikprogrammer.intellijidepluginjetbrainshackathon2025.codeImprovers.ImproveByTypeAction"
                text="Reduce Duplication" description="Reduces code duplication using AI"/>
    </actions>
</idea-plugin>
